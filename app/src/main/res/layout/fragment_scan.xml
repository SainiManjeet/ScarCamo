<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/rootLayout"
    android:layout_marginTop="?actionBarSize"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:orientation="vertical">




        <com.scarcamo.custom.CTextViewHeavy
            style="@style/CFontHeavy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_Top_very_Large"
            android:textSize="@dimen/Text_Size_Large"
            android:text="DETECT YOUR"/>
        <com.scarcamo.custom.CTextViewHeavy
            style="@style/CFontHeavy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="@dimen/margin_bottom_vlarge"
            android:textSize="@dimen/Text_Size_Large"
            android:textStyle="bold"
            android:text="SKIN TONE"/>

        <com.scarcamo.custom.CButtonBold
            android:id="@+id/scanBtn"
            style="@style/CFontBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_color_picker_pointer_ring_size"
            android:layout_marginLeft="@dimen/padding_Large"
            android:layout_marginStart="@dimen/padding_Large"
            android:layout_marginRight="@dimen/padding_Large"
            android:layout_marginEnd="@dimen/padding_Large"

            android:background="@drawable/greenbutton"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical|center"
           android:textAllCaps="true"
            android:textSize="@dimen/Text_Size_medium"
            android:text="Scan" />

        <com.scarcamo.custom.CTextViewThin
            style="@style/CFontThin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/margin_Top_medium"
            android:layout_gravity="center_vertical|center_horizontal"
            android:drawableRight="@drawable/ic_remove_black_24dp"
            android:drawableLeft="@drawable/ic_remove_black_24dp"
            android:textSize="@dimen/Text_Size_medium"
            android:text="or"/>

        <com.scarcamo.custom.CButtonBold
            android:id="@+id/chooseBtn"
            style="@style/CFontBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_Top_Large"
            android:layout_marginLeft="@dimen/padding_Large"
            android:layout_marginStart="@dimen/padding_Large"
            android:layout_marginRight="@dimen/padding_Large"
            android:layout_marginEnd="@dimen/padding_Large"

            android:background="@drawable/greenbutton"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical|center"
            android:textAllCaps="true"
            android:textSize="@dimen/Text_Size_medium"
            android:text="Choose" />
    </LinearLayout>
</RelativeLayout>