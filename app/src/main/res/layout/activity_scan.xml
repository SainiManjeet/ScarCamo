<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_page_bg"
    android:id="@+id/rootLayout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:orientation="vertical">



    <ImageView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_Top_very_Large"
        android:gravity="center_horizontal"
        android:src="@drawable/logo"
        />

    <com.scarcamo.custom.CTextViewHeavy
        style="@style/CFontHeavy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBlack"

        android:layout_marginTop="@dimen/margin_Top_very_Large"
        android:textSize="@dimen/Text_Size_Large"
        android:text="DETECT YOUR"/>
        <com.scarcamo.custom.CTextViewHeavy
            style="@style/CFontHeavy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/Text_Size_Large"
            android:text="SKIN TONE"/>

        <com.scarcamo.custom.CButtonBold
            android:id="@+id/scanBtn"
            style="@style/CFontBold"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_Top_Large"
            android:paddingLeft="@dimen/padding_Large"
            android:paddingStart="@dimen/padding_Large"
            android:paddingRight="@dimen/padding_Large"
            android:paddingEnd="@dimen/padding_Large"
            android:textStyle="italic"
            android:background="@drawable/border_light"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical|center"

            android:textSize="@dimen/Text_Size_medium"
            android:text="SCAN" />

        <com.scarcamo.custom.CTextViewThin
            style="@style/CFontThin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/margin_Top_medium"
            android:layout_gravity="center_vertical|center_horizontal"
            android:drawableRight="@drawable/ic_remove_black_24dp"
            android:drawableLeft="@drawable/ic_remove_black_24dp"
            android:textSize="@dimen/Text_Size_medium"
            android:text="or"/>

        <com.scarcamo.custom.CButtonBold
            android:id="@+id/chooseBtn"
            style="@style/CFontBold"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_Top_Large"
            android:paddingLeft="@dimen/padding_Large"
            android:paddingStart="@dimen/padding_Large"
            android:paddingRight="@dimen/padding_Large"
            android:paddingEnd="@dimen/padding_Large"
            android:textStyle="italic"
            android:background="@drawable/border_light"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical|center"

            android:textSize="@dimen/Text_Size_medium"
            android:text="CHOOSE" />
    </LinearLayout>
</RelativeLayout>