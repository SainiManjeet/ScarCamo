<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <ViewSwitcher
        android:id="@+id/loginViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_Top_very_Large"
                android:gravity="center_horizontal"
                android:src="@drawable/logo_white" />

            <com.scarcamo.custom.CTextViewHeavy
                style="@style/CFontHeavy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_screen_margin"
                android:gravity="center_horizontal"
                android:text="LOG IN"

                android:textColor="@color/colorWhite"
                android:textSize="@dimen/Text_Size_medium" />

            <EditText
                android:id="@+id/username_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_medium"
                android:background="@drawable/border"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Username"

                android:inputType="textPersonName"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:textCursorDrawable="@drawable/cursor"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGrey" />

            <EditText
                android:id="@+id/password_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_medium"
                android:background="@drawable/border"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Password"

                android:inputType="textPassword"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:textCursorDrawable="@drawable/cursor"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGrey" />

            <com.scarcamo.custom.CTextViewThin
                android:id="@+id/forgot_password"
                style="@style/CFontThin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:padding="5dp"
                android:gravity="right"
                android:text="Forgot Password"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/Text_Size_Small"
                />

            <com.scarcamo.custom.CButtonBold
                android:id="@+id/loginBtn"
                style="@style/CFontBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_Top_Large"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                android:drawablePadding="@dimen/padding_small"
                android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                android:gravity="center_vertical|center"
                android:paddingEnd="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_VLarge"
                android:paddingRight="@dimen/padding_medium"
                android:paddingStart="@dimen/padding_VLarge"
                android:text="LOG IN"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/Text_Size"
                />

            <com.scarcamo.custom.CTextViewThin
                android:id="@+id/registerHere"
                style="@style/CFontThin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_color_picker_pointer_ring_size"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_small"
                android:text="Create a new account"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/Text_Size_Small" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <com.scarcamo.custom.CTextViewHeavy
                android:id="@+id/user_name"
                style="@style/CFontHeavy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_medium"
                android:gravity="center_horizontal"
                android:text="User Name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/Text_Size_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_medium"

                android:background="@color/colorGrey" />

            <com.scarcamo.custom.CTextViewHeavy
                android:id="@+id/myUsername_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_small"
                android:ems="10"
                android:inputType="textPersonName"
                style="@style/CFontHeavy"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:text="Email"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/Text_Size"/>

            <com.scarcamo.custom.CTextViewHeavy
                android:id="@+id/myPassword_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="2dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGreyDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@color/colorGrey" />

            <com.scarcamo.custom.CTextViewHeavy
                style="@style/CFontHeavy"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_medium"
                android:text="Primary Shipping Address"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/Text_Size" />

            <com.scarcamo.custom.CTextViewHeavy
                android:id="@+id/selectedColor"
                style="@style/CFontHeavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="2dp"

                android:text="No Address Found"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/Text_Size_Small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_medium"
                android:background="@color/colorGrey" />

            <com.scarcamo.custom.CTextViewHeavy
                android:id="@+id/changePasswordText"
                style="@style/CFontHeavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_small"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:text="Change Password"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/Text_Size" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_small"
                android:background="@color/colorGrey" />
            <com.scarcamo.custom.CTextViewHeavy
                android:id="@+id/changeAddressText"
                style="@style/CFontHeavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_small"
                android:paddingBottom="2dp"
                android:paddingLeft="@dimen/padding_small"
                android:paddingStart="@dimen/padding_small"
                android:paddingTop="2dp"
                android:text="Change Shipping Address"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/Text_Size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="@dimen/fab_margin"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginStart="@dimen/fab_margin"
                android:layout_marginTop="@dimen/margin_Top_small"
                android:background="@color/colorGrey" />

        </LinearLayout>
    </ViewSwitcher>
</LinearLayout>