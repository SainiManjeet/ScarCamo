<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"

    tools:context=".fragments.AboutUsFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"

        android:src="@drawable/about_us" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/about_us_screen_margin"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:background="@drawable/border_transparent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin">

        <com.scarcamo.custom.CTextViewHeavy
            style="@style/CFontHeavy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_Top_medium"
            android:gravity="center_horizontal"
            android:text="ABOUT US"
            android:textColor="@color/colorBlack"

            android:textSize="@dimen/Text_Size_medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/margin_Top_small"
            android:layout_marginTop="@dimen/margin_Top_small"
            android:background="#b2b2b2" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <com.scarcamo.custom.CTextViewHeavy
            style="@style/CFontHeavy"
            android:id="@+id/aboutText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:lineSpacingExtra="4dp"
            android:gravity="center_horizontal"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/Text_Size_Small"
             />
</ScrollView>
    </LinearLayout>


</RelativeLayout>