<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".fragments.ForgotPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.scarcamo.custom.CTextViewHeavy
            style="@style/CFontHeavy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textSize="@dimen/Text_Size_Large"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/margin_Top_medium"
            android:text="Forgot Password" />


        <EditText
            android:id="@+id/yourEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Your Email"
            android:inputType="textPersonName"
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:paddingLeft="@dimen/padding_small"
            android:layout_marginTop="@dimen/margin_Top_very_Large"
            android:background="@drawable/edit_text_background"
            />

        <com.scarcamo.custom.CButtonBold
            android:id="@+id/sendBtn"
            style="@style/CFontBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_Top_Large"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingStart="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium"
            android:drawablePadding="@dimen/padding_small"
            android:background="@drawable/border_light"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical|center"
            android:drawableEnd="@drawable/ic_arrow_black"
            android:drawableRight="@drawable/ic_arrow_black"
            android:textStyle="bold"
            android:textSize="@dimen/Text_Size_medium"
            android:text="SEND" />
    </LinearLayout>

</FrameLayout>