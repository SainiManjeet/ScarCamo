<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="CCPTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CFontBold" parent="@android:style/Widget.Button">
        <item name="cFontBold">fonts/helvetica_normal.ttf</item>
    </style>
    <style name="CFontStd" parent="@android:style/Widget.TextView">
        <item name="CFontStd">fonts/helveticainseratltstd.otf</item>
    </style>

    <style name="CFontThin" parent="@android:style/Widget.TextView">
        <item name="cFontThin">fonts/hel.ttf</item>
    </style>

    <style name="CFontHeavy" parent="@android:style/Widget.TextView">
        <item name="cFontHeavy">fonts/helvetica_normal.ttf</item>
    </style>

    <style name="CFontBlack" parent="@android:style/Widget.TextView">
        <item name="cFontBlack">fonts/Lato-Black.ttf</item>
    </style>

    <style name="CFontBoldEditText" parent="@android:style/Widget.EditText">
        <item name="cFontBold">fonts/Lato-Black.ttf</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="CardWidgetStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="android:background">@color/colorGrey</item>
        <item name="editTextStyle">@style/EditTextOverride</item>
        <item name="android:editTextStyle">@style/EditTextOverride</item>
    </style>

    <style name="EditTextOverride" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorGreyDark</item>
    </style>

    <style name="Header.Light" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/header_light</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
</resources>
